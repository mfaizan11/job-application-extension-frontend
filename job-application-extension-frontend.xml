        minWidth: 85,
        maxWidth: 110,
        minHeight: 120,
        "&:hover": {
          bgcolor: "rgba(187, 134, 252, 0.15)",
          border: "2px dashed #bb86fc",
          transform: "translateY(-2px)",
        },
      }}
    >
      <input
        ref={fileInputRef}
        type="file"
        accept=".pdf,application/pdf"
        multiple
        style={{ display: "none" }}
        onChange={handleFileSelect}
      />
      <CloudUpload
